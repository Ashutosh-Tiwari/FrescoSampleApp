<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.simformsolutions.ashutoshtiwari.frescosampleapp.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/xml_text" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/my_image_view_circle"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        fresco:placeholderImage="@drawable/google_photos_400x400"
        fresco:roundAsCircle="true"
        fresco:viewAspectRatio="1.33" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/java_text" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/my_image_view_rounded_corners"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        fresco:placeholderImage="@drawable/google_photos_400x400"
        fresco:roundedCornerRadius="6dp" />
</LinearLayout>
